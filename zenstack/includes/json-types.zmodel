type LeagueRules {
    goaliesFirst         Boolean? @default(false)
    noBestGolieAndPlayer Boolean? @default(false)
    keepGoalies          Boolean? @default(false)
}


enum ShirtColor {
    Black
    White
    Red
    Green
    Blue
    Yellow
    Cyan
    Magenta
    Gray
}

type LeagueConfiguration {
    teamCount     Int
    useTeamColors Boolean?
    teamColors    ShirtColor[]?
    rules         LeagueRules
}