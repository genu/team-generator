{
  "name": "teams-generator",
  "private": true,
  "type": "module",
  "engines": {
    "node": "22.x"
  },
  "zenstack": {
    "schema": "./zenstack/schema.zmodel"
  },
  "scripts": {
    "build": "zenstack generate && dotenv -e .env -- prisma migrate deploy && nuxt build",
    "clean": "nuxt cleanup && rm -rf node_modules .generated .nuxt",
    "dev": "nuxt dev",
    "start": "NODE_OPTIONS='--no-experimental-require-module' node .output/server/index.mjs",
    "generate": "nuxt generate",
    "preview": "NODE_OPTIONS='--no-experimental-require-module' nuxt preview",
    "postinstall": "zenstack generate && nuxt prepare",
    "playwright": "playwright",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "test": "bun docker:up -d && playwright test && bun docker:down",
    "test:db": "bun docker:down && bun docker:up",
    "test:dev": "zenstack generate && dotenv -e .env.test -- prisma migrate dev && nuxt dev --dotenv .env.test",
    "test:ci": "zenstack generate && dotenv -e .env.test -- prisma migrate dev && nuxt build --dotenv .env.test && NODE_OPTIONS='--no-experimental-require-module' nuxt preview --dotenv .env.test",
    "test:db:reset": "dotenv -e .env.test -- prisma migrate reset --force",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prisma": "dotenv -e .env -- prisma",
    "zenstack": "zenstack",
    "db:generate": "zenstack generate",
    "db:migrate": "dotenv -e .env -- prisma migrate",
    "playwright:ui": "playwright test --ui",
    "dotenv": "dotenv"
  },
  "devDependencies": {
    "@nuxt/eslint": "1.8.0",
    "@nuxt/test-utils": "^3.19.1",
    "@playwright/test": "^1.53.1",
    "@tanstack/eslint-plugin-query": "5.83.1",
    "@types/lodash-es": "4.17.12",
    "@types/msgpack-lite": "^0.1.11",
    "@types/node": "^24.0.3",
    "@vueuse/core": "^13.4.0",
    "@vueuse/nuxt": "^13.4.0",
    "@zenstackhq/tanstack-query": "^2.16.0",
    "dotenv-cli": "^8.0.0",
    "eslint": "9.33.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "nuxt": "^3.17.5",
    "prisma": "^6.10.1",
    "std-env": "^3.9.0",
    "vue-tsc": "^3.0.0",
    "zenstack": "2.18.0"
  },
  "dependencies": {
    "@formwerk/core": "^0.11.0",
    "@hebilicious/vue-query-nuxt": "^0.3.0",
    "@iconify-json/ph": "^1.2.2",
    "@nuxt/ui": "^3.1.3",
    "@prisma/client": "^6.10.1",
    "@tanstack/vue-query": "^5.80.10",
    "@vueuse/components": "13.6.0",
    "@vueuse/router": "^13.4.0",
    "@zenstackhq/runtime": "2.18.0",
    "@zenstackhq/server": "^2.16.0",
    "lodash-es": "4.17.21",
    "typescript": "^5.8.3",
    "vue-slicksort": "^2.0.5",
    "zod": "^3.25.67"
  }
}
